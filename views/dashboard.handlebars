{{#if blogPosts.length}}
<h2>Your Blog Posts</h2>

{{#each blogPosts}}
<article>
  <h3>{{this.title}}</h3>
  <p>Posted on {{formatDate this.createdAt}}</p>
  <p>{{truncateText this.content 100}}</p>
  <a href="/blogs/{{this.id}}">Read More</a>
  <a href="/blogs/{{this.id}}/edit">Edit</a>
  <a href="/blogs/{{this.id}}/delete">Delete</a>
</article>
{{/each}}
{{else}}
<p>You have not created any blog posts yet.</p>
{{/if}}

<h2>Create a New Blog Post</h2>

<form action="/posts" method="POST">
  <input type="text" name="title" placeholder="Title" required>
  <textarea name="content" placeholder="Content" required></textarea>
  <button type="submit">Create</button>
</form>

<article>
  <h2>{{blogPost.title}}</h2>
  <p>Posted by {{blogPost.User.username}} on {{formatDate blogPost.createdAt}}</p>
  <p>{{blogPost.content}}</p>
</article>

<h3>Comments</h3>

{{#each blogPost.Comments}}
<div>
  <p>{{this.content}}</p>
  <p>Posted by {{this.User.username}} on {{formatDate this.createdAt}} at {{formatTime this.createdAt}}</p>
</div>
{{/each}}

{{#if loggedIn}}
<form action="/posts/{{blogPost.id}}/comments" method="POST">
  <textarea name="content" placeholder="Leave a comment" required></textarea>
  <button type="submit">Submit</button>
</form>
{{else}}
<p>Please <a href="/login">login</a> to leave a comment.</p>
{{/if}}
